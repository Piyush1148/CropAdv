# Environment Variables for Crop Advisory Backend
# Copy this to .env and fill in your actual values

# FastAPI Configuration
FASTAPI_HOST=localhost
FASTAPI_PORT=8000
DEBUG=True
SECRET_KEY="AddYourSecretKeyHere"

# Firebase Configuration
FIREBASE_PROJECT_ID="add-your-project-id"
FIREBASE_PRIVATE_KEY_ID="add-your-private-key-id"
FIREBASE_PRIVATE_KEY="add-your-private-key-here"
FIREBASE_CLIENT_EMAIL="add-your-client-email-here"
FIREBASE_CLIENT_ID="add-your-client-id-here"
FIREBASE_AUTH_URI="add-your-auth-uri-here"
FIREBASE_TOKEN_URI="add-your-token-uri-here"

# External API Keys
OPENWEATHER_API_KEY=your-openweather-api-key
GROQ_API_KEY=add-your-groq-api-key-here
WEATHER_API_KEY=your-weather-api-key

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ML Model Configuration
MODEL_PATH=./ml_models/crop_recommendation_model.joblib
SCALER_PATH=./ml_models/feature_scaler.joblib